  <specs>
    <spec>Length: 37cm</spec>
    <spec>Diameter: 13cm (main body)</spec>
    <spec>Weight: 12kg</spec>
    <spec>Top Speed: 7.2m/s</spec>
    <spec>Communications:	Primary: 802.11b</spec>
    <spec>Optional: 900Mhz FM Video</spec>
  </specs>
  <sensors>
    <sensor>Color Tilt Camera</sensor>
    <sensor>Color USB Camera</sensor>
    <sensor>Eltec Pyroelectric Sensor</sensor>
    <sensor>GP2D02 Range Finder</sensor>
  </sensors>
  <computation></computation>
  <lifetime>
    <life>250 Wh Lithium Polymer Battery</life>
    <life>Approx. 20 hr Quiescent Mode</life>
    <life>Approx 5 - 7.5 hr Reconnaissance Mode</life>
  </lifetime>
